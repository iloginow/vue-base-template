{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "label": "Project name"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description",
      "default": "A Vue.js project"
    },
    "author": {
      "type": "string",
      "label": "Author"
    },
    "license": {
      "type": "string",
      "label": "License",
      "default": "MIT"
    },
    "static": {
      "type": "confirm",
      "message": "Need static site generator?",
      "default": true
    },
    "useCustomRoot": {
      "type": "confirm",
      "message": "Use a custom root directory?",
      "default": false
    },
    "customRoot": {
      "when": "useCustomRoot",
      "type": "string",
      "message": "Specify custom root directory (ex: /customdir)"
    }
  }
  },
  "filters": {
    "static-site-generator.js": "static"
  }
}
